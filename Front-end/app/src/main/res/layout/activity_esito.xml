<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/txtEsito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESITO"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <FrameLayout
        android:id="@+id/boxSmiley"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#E6E6E6"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/txtEsito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgSmiley"
            android:layout_width="103dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:src="@drawable/smiley" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/boxSmiley"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtErrori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ERRORI: 3"
            android:textSize="18sp"
            android:layout_marginEnd="32dp"/>

        <TextView
            android:id="@+id/txtCorrette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CORRETTE: 27"
            android:textSize="18sp" />
    </LinearLayout>


    <!-- Box 1 -->
    <FrameLayout
        android:id="@+id/box1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#E6E6E6"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/statsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Box 2 -->
    <FrameLayout
        android:id="@+id/box2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#E6E6E6"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/box1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavEsito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>