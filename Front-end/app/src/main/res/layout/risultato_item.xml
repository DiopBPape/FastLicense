<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="8dp">

    <TextView
        android:id="@+id/testoDomanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="30dp"
        android:gravity="center"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/rispostaData"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:text="La tua risposta: Vero/Falso"

        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/testoDomanda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/rispostaCorretta"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:text="Risposta esatta: Vero/Falso"

        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/rispostaData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>